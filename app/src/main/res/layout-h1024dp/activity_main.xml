<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:fillViewport="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

   <ImageView
       android:id="@+id/dd_logo"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:layout_marginEnd="50dp"
       android:layout_marginStart="50dp"
       android:layout_centerHorizontal="true"
       android:alpha="0"
       android:layout_marginBottom="20dp"
       android:layout_marginTop="50dp"
       android:src="@mipmap/dd_logo"/>

   <LinearLayout
       android:id="@+id/container"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:visibility="invisible"
       android:layout_marginTop="70dp"
       android:orientation="vertical">



    <TextView
        android:id="@+id/train_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fjalla_one"
        android:text="@string/we_train_you_on"
        android:textColor="@color/basic_color"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/web_development"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/hexagon"
          android:layout_centerInParent="true"
          app:tint="#FAA61A"/>
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          app:tint="@color/white"
          android:layout_centerInParent="true"
          android:src="@drawable/web_icon"
          />

     </RelativeLayout>

     <TextView
         android:id="@+id/web_dev_txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/web_development"
         android:textSize="16sp"
         android:layout_marginStart="20dp"
         android:fontFamily="@font/ultra"
         android:textColor="@color/black"
         android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobile_development"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/hexagon"
          android:layout_centerInParent="true"
          app:tint="#FAA61A"/>
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          app:tint="@color/white"
          android:layout_centerInParent="true"
          android:src="@drawable/ic_baseline_android_24"
          />

     </RelativeLayout>

     <TextView
         android:id="@+id/mobile_txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/mobile_development"
         android:textSize="16sp"
         android:layout_marginStart="20dp"
         android:fontFamily="@font/ultra"
         android:textColor="@color/black"
         android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/digital_marketing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/hexagon"
          android:layout_centerInParent="true"
          app:tint="#FAA61A"/>
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          app:tint="@color/white"
          android:layout_centerInParent="true"
          android:src="@drawable/marketing"
          />

     </RelativeLayout>

     <TextView
         android:id="@+id/digital_marketing_txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/digital_marketing"
         android:textSize="16sp"
         android:layout_marginStart="20dp"
         android:fontFamily="@font/ultra"
         android:textColor="@color/black"
         android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/data_science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/hexagon"
          android:layout_centerInParent="true"
          app:tint="#FAA61A"/>
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          app:tint="@color/white"
          android:layout_centerInParent="true"
          android:src="@drawable/ic_baseline_cloud_24"
          />

     </RelativeLayout>

     <TextView
         android:id="@+id/data_science_txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/data_science"
         android:textSize="16sp"
         android:layout_marginStart="20dp"
         android:fontFamily="@font/ultra"
         android:textColor="@color/black"
         android:layout_gravity="center_vertical"/>
    </LinearLayout>
   </LinearLayout>

  </LinearLayout>
 </ScrollView>

</LinearLayout>